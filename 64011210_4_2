#include<stdio.h>
int main()
{
	int n;
	printf("Enter Number : ");
	scanf("%d",&n);
	
	int a,b;
	for(a=1; a<=n; a++)
	{	if (a%2==1)
		{
			for(b=1; b<=n; b++)
			{
				if (b%2==1)
				{
					printf("*");
				}
				else
				{
					printf(" ");
				}
			}
			printf("\n");
		}
		else
		{
			for(b=1; b<=n; b++)
			{
				if (b%2==1)
				{
					printf(" ");
				}
				else
				{
					printf("*");
				}
			}
			printf("\n");
		}
	}
	
	return 0;
}
